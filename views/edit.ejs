<% include partials/head %>

<div class="ui main text container piled segment">
  <div class="ui huge header">Edit Post</div><!-- /.ui .huge .header -->

  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT"
      method="POST">
    <div class="two fields">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]"
            value="<%= blog.title %>"></input>
      </div><!-- /.field -->
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]"
        value="<%= blog.image %>"></input>
      </div><!-- /.field -->
    </div><!-- /.fields -->
    <div class="field">
      <label>Content</label>
      <textarea name="blog[body]"><%= blog.body %></textarea>
    </div><!-- /.field -->
    <button class="ui submit button">Submit</button>
  </form><!-- /.ui .form -->

</div><!-- /.ui .main .text .container .segment -->

<% include partials/foot %>
